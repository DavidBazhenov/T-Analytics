<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Тень -->
    <item>
        <shape>
            <size
                android:width="30dp"
                android:height="30dp" />
            <solid android:color="#55000000" /> <!-- Полупрозрачная тень -->
            <corners android:radius="15dp" />
        </shape>
    </item>
    <!-- Бегунок -->
    <item>
        <shape>
            <size
                android:width="24dp"
                android:height="24dp" />
            <solid android:color="#FFFFFF" /> <!-- Белый цвет -->
            <corners android:radius="12dp" />
        </shape>
    </item>
</layer-list>
